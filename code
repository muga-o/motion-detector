// Pin definitions
const int pirPin = 2;        // PIR sensor output connected to digital pin 2
const int redLedPin = 13;    // Red LED connected to digital pin 13
const int buzzerPin = 12;    // Buzzer connected to digital pin 12

void setup() {
  pinMode(pirPin, INPUT);    // PIR sensor pin as input
  pinMode(redLedPin, OUTPUT);// Red LED as output
  pinMode(buzzerPin, OUTPUT);// Buzzer as output

  // Initialize red LED and buzzer to OFF
  digitalWrite(redLedPin, LOW);
  digitalWrite(buzzerPin, LOW);

  Serial.begin(9600);        // For debugging
}

void loop() {
  int motionDetected = digitalRead(pirPin); // Read PIR sensor output

  if (motionDetected == HIGH) {
    // Motion detected: turn ON red LED and buzzer
    digitalWrite(redLedPin, HIGH);
    digitalWrite(buzzerPin, HIGH);
    Serial.println("Motion Detected!");
  } else {
    // No motion: turn OFF red LED and buzzer
    digitalWrite(redLedPin, LOW);
    digitalWrite(buzzerPin, LOW);
    Serial.println("No Motion");
  }

  delay(250); // Small delay for stability
}
